<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center">Edit Product Type</h2>
            <br />
            @using (Html.BeginForm("Edit", "LoaiSanPhamAdmin", FormMethod.Post, new { @class = "edit-admin" }))
            {
                <label for="fname">Product Type Code</label>
                <input type="text" id="fname" name="maLoaiSanPham" style="background-color: #5D5E63;" required value="@Model.MaLoaiSanPham" readonly>
                <label for="lname">Product Type Name</label>
                <input type="text" id="lname" name="tenLoaiSanPham" required value="@Model.TenLoaiSanPham">
                <label for="status">Status</label>
                <select id="status" name="tinhTrang">
                    @if (@Model.TinhTrang == "1")
                    {
                        <option value="0">Not Locked</option>
                        <option value="1" selected>Locked</option>
                    }
                    else
                    {
                        <option value="0" selected>Not Locked</option>
                        <option value="1">Locked</option>
                    }
                </select>
                <input type="submit" value="Confirm">
            }
        </div>
    </div>
</div>





