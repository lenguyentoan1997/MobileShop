@model ShopOnlineConnection.AspNetUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Account Information</h2>

<style>
    input[type=text], input[type=password] {
        width: 90%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2A9FD6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    label[for=id], [for=email], [for=user-name], [for=phone] {
        width: 100%;
    }

    input[type=text]:enabled {
        color: #000000;
    }

    .icon-password {
        float: left;
        margin-right: 10px;
        font-size: 25px;
    }

    .btn-save {
        width: 30%;
    }

    input:read-only {
        background-color: rgb(118, 118, 118);
    }
</style>

<div>

    @using (Html.BeginForm("Edit", "ManageAccountDetailsAdmin", FormMethod.Post, new { @style = "width:50%;margin:auto;" }))
    {
        <label for="id">ID Account</label>
        <input type="text" id="id" name="Id" value="@Model.Id" readonly />

        <label for="email">Email</label>
        <input type="text" id="email" name="Email" value="@Model.Email" readonly />

        <label for="user-name">User Name</label>
        <input type="text" id="user-name" name="FullName" value="@Model.FullName" readonly />

        <button type="button" class="slide-toggle btn btn-primary" value="Enable" id="btnEditName">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </button>

        <label for="phone">Phone</label>
        <input type="text" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" />

