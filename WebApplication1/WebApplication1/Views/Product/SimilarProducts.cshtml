@model IEnumerable<ShopOnlineConnection.SanPham>

@{
    ViewBag.Title = "SimilarProducts";
    Layout = null;
}

<div class="row">
    <section class="center slider">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 similar-details-products">
                <div class="card card-signin my-5 height-products">
                    <div class="card-body">
                        <div class="product text-center">
                            <div class="image col-lg-12">
                                <a href="@Url.Action("Details","Product",new { id=item.MaSanPham})"
                                   target="_blank">
                                    <img src="~/Asset/images/@item.HinhChinh" style="display:initial;" />
                                </a>
                            </div>
                            <div class="name">
                                <h3><a href="@Url.Action("Details",new { id=item.MaSanPham})">@item.TenSanPham</a></h3>
                            </div>
                            <div class="price">
                                <strong>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:#,#₫}", @item.Gia)</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</div>
<div class="paginator-center text-color text-center">
    <ul>
        <li class="prev"><i class="fas fa-arrow-alt-circle-left"></i></li>
        <li class="next"><i class="fas fa-arrow-alt-circle-right"></i></li>
    </ul>
</div>

<script src="~/Asset/js/productDetails01.js"></script>

