@model ShopOnlineConnection.NhaSanXuat
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("Edit", "NhaSanXuatAdmin", FormMethod.Post, new { @class = "edit-admin" }))
            {
                <h2 class="text-center">Edit Producer</h2>
                <label for="fname">Producer Code</label>
                <input type="text" id="fname" name="maNhaSanXuat" style="background-color: #5D5E63;" required value="@Model.MaNhaSanXuat" readonly>
                <label for="lname">Producer Name</label>
                <input type="text" id="lname" name="tenNhaSanXuat" required value="@Model.TenNhaSanXuat">
                <label for="status">Status</label>
                <select id="status" name="tinhTrang">
                    @if (@Model.TinhTrang == "1")
                    {
                        <option value="0">Not Locked</option>
                        <option value="1" selected>Locked</option>
                    }
                    else
                    {
                        <option value="0" selected>Not Locked</option>
                        <option value="1">Locked</option>
                    }
                </select>

                <input type="submit" value="Confirm" />
            }
        </div>
    </div>
</div>






