@model ShopOnlineConnection.SanPham
<httpRuntime validateRequest="false" />

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<br />
<h2 class="title-product-admin">Edit</h2>
@using (Html.BeginForm("Edit", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="product-admin">
        <tr>
            <td>Product Code</td>
            @*name input like name DB*@
            <td><input class="input-product-style" maxlength="11" type="text" name="MaSanPham" value="@Model.MaSanPham" readonly /></td>
            <td rowspan="8" class="td-avatar-product">
                <div class="image">
                    @if (Model.HinhChinh == null)
                    {
                        <img class="img" id="imgAvatar" src="~/Asset/images/defaultPhone.jpg" />
                    }
                    else
                    {
                        <img class="img" id="imgAvatar" src="~/Asset/images/@Model.HinhChinh" />
                    }
                    <div class="image-more">
                        <ul class="row" style="margin-top:50px;">
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                @if (Model.Hinh1 == null)
                                {
                                    <img class="img1 img-responsive" id="imgThumbnail1" src="~/Asset/images/defaultPhone.jpg">
                                    <span>Image 1</span>
                                }
                                else
                                {
                                    <img class="img1 img-responsive" id="imgThumbnail1" src="~/Asset/images/@Model.Hinh1">
                                    <span>Image 1</span>
                                }
                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                @if (Model.Hinh2 == null)
                                {
                                    <img class="img2 img-responsive" id="imgThumbnail2" src="~/Asset/images/defaultPhone.jpg">
                                    <span>Image 2</span>
                                }
                                else
                                {
                                    <img class="img2 img-responsive" id="imgThumbnail2" src="~/Asset/images/@Model.Hinh2">
                                    <span>Image 2</span>
                                }

                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                @if (Model.Hinh3 == null)
                                {
                                    <img class="img3 img-responsive" id="imgThumbnail3" src="~/Asset/images/defaultPhone.jpg">
                                    <span>Image 3</span>
                                }
                                else
                                {
                                    <img class="img3 img-responsive" id="imgThumbnail3" src="~/Asset/images/@Model.Hinh3">
                                    <span>Image 3</span>
                                }
                            </li>
                            <li class="col-lg-3 col-sm-3 col-xs-4">
                                @if (Model.Hinh4 == null)
                                {
                                    <img class="img4 img-responsive" id="imgThumbnail4" src="~/Asset/images/defaultPhone.jpg">
                                    <span>Image 4</span>
                                }
                                else
                                {
                                    <img class="img4 img-responsive" id="imgThumbnail4" src="~/Asset/images/@Model.Hinh4">
                                    <span>Image 4</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>Product Type</td>
            <td>
                @Html.DropDownList("MaLoaiSanPham", null, new { @class = "product-type-list" })
            </td>
        </tr>
        <tr>
            <td>Product Name</td>
            <td><input class="input-product-style" type="text" name="TenSanPham" value="@Model.TenSanPham" /></td>
        </tr>
        <tr>
            <td>Image Avatar</td>
            <td><input type="File" class="img" id="file_Hinh" name="HinhChinh" onchange="loadImgAvatar(this)" value="@Model.HinhChinh" />
            </td>
        </tr>
        <tr>
            <td>Image 1</td>
            <td><input type="File" class="img1" id="file_Hinh" name="Hinh1" onchange="loadImgThumbnail1(this)" value="@Model.Hinh1" /></td>
        </tr>
        <tr>
            <td>Image 2</td>
            <td><input type="File" class="img2" id="file_Hinh" name="Hinh2" onchange="loadImgThumbnail2(this)" value="@Model.Hinh2" /></td>
        </tr>
        <tr>
            <td>Image 3</td>
            <td><input type="File" class="img3" id="file_Hinh" name="Hinh3" onchange="loadImgThumbnail3(this)" value="@Model.Hinh3" /></td>
        </tr>
        <tr>
            <td>Image 4</td>
            <td><input type="File" class="img4" id="file_Hinh" name="Hinh4" onchange="loadImgThumbnail4(this)" value="@Model.Hinh4" /></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input class="input-product-style" type="number" name="Gia" value="@Model.Gia" /></td>
        </tr>
        <tr>
            <td>Note</td>
            <td><input class="input-product-style" type="text" name="GhiChu" value="@Model.GhiChu" /></td>
        </tr>
        <tr>
            <td>Producer</td>
            <td>
                @Html.DropDownList("MaNhaSanXuat", null, new { @class = "producer-code-list" })
            </td>
        </tr>
        <tr>
            <td>Status</td>
            <td>
                <select id="conditionProduct" name="TinhTrang">
                    @if (Model.TinhTrang == "1")
                    {
                        <option value="0">Hiển Thị</option>
                        <option value="1" selected>Ẩn</option>
                    }
                    else
                    {
                        <option value="0" selected>Hiển Thị</option>
                        <option value="1">Ẩn</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="width:300px;">Configuration</td>
            <td colspan="2">
                <textarea class="ckeditor" name="CauHinh" rows="4" cols="30">@Model.CauHinh</textarea>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <input class="input-add-product" type="submit" name="btn_ThemDienThoai" value="Xac Nhan" />
            </td>
        </tr>
    </table>
}

