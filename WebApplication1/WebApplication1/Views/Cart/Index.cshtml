@model List<WebApplication1.Models.BUS.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Images</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/Asset/images/@item.Product.HinhChinh" width="50" /></td>
                                <td>@item.Product.TenSanPham</td>
                                <td><input type="number" class="txtQuantity" data-id="@item.Product.MaSanPham" value="@item.Quantity" /></td>
                                <td>@item.Product.Gia.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@((item.Product.Gia.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                <td><a href="#" data-id="@item.Product.MaSanPham" class="btn-delete">Xóa</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <button id="btnContinue" class="btn">Tiếp Tục Mua Hàng</button>
        <button id="btnUpdate" class="btn">Cập Nhật Giỏ Hàng</button>
        <button id="btnDeleteAll" class="btn">Xóa Hết Tất Cả Sản Phẩm</button>
        <button id="btnPayment" class="btn">Thanh Toán</button>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <p class="alert alert-danger">Chua Co San pham nao trong gio hang</p>
            </div>
        </div>
    </div>
}
    <br/>

@section jsCart{
    <script src="/Asset/js/controller/cartController.js"></script>
}