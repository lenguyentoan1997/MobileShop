@model WebApplication1.Models.Database.NhaSanXuatView

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("Edit", "NhaSanXuatAdmin", FormMethod.Post, new { @class = "edit-admin" }))
            {
                <h2 class="text-center">Edit Producer</h2>
                <label for="producer_code">Producer Code</label>
                <input type="text" name="maNhaSanXuat" style="background-color: #5D5E63;" required value="@Model.MaNhaSanXuat" readonly>
                <label for="producer_name">Producer Name</label>
                <input type="text" name="tenNhaSanXuat" required value="@Model.TenNhaSanXuat">
                <label for="producer_type">Producer Type</label>
                <select class="cre-producer-type" name="tenLoaiSanPham">
                    @if (Model.TenLoaiSanPham == "Phone")
                    {
                        <option selected>Phone</option>
                        <option>Laptop</option>
                        <option>Accessories</option>
                    }
                    else if (Model.TenLoaiSanPham == "Laptop")
                    {
                        <option>Phone</option>
                        <option selected>Laptop</option>
                        <option>Accessories</option>
                    }
                    else
                    {
                        <option>Phone</option>
                        <option>Laptop</option>
                        <option selected>Accessories</option>
                    }
                </select>
                <label for="status">Status</label>
                <select id="status" name="tinhTrang">
                    @if (@Model.TinhTrang == "1")
                    {
                        <option value="0">Not Locked</option>
                        <option value="1" selected>Locked</option>
                    }
                    else
                    {
                        <option value="0" selected>Not Locked</option>
                        <option value="1">Locked</option>
                    }
                </select>

                <input type="submit" value="Confirm" />
            }
        </div>
    </div>
</div>






