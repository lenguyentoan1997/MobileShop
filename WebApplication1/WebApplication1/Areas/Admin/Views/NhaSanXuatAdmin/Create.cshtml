
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center">Create Producer</h2>
            @using (Html.BeginForm("Create", "NhaSanXuatAdmin", FormMethod.Post, new { @class = "create-admin" }))
            {
                <label for="fname">Producer Code</label>
                <input type="text" id="fname" name="MaNhaSanXuat" placeholder="Enter The Producer Code" required>

                <label for="lname">Producer Name</label>
                <input type="text" id="lname" name="TenNhaSanXuat" placeholder="Enter The Producer Code" required>

                <label for="status">Status</label>
                <select id="status" name="TinhTrang" required>
                    <option value="0">Not Locked</option>
                    <option value="1">Locked</option>
                </select>

                <input type="submit" value="CREATE">
            }
        </div>
    </div>
</div>



