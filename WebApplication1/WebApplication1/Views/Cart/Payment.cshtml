@model List<WebApplication1.Models.BUS.CartItem>

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @if (Model.Count > 0)
            {
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Images</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/Asset/images/@item.Product.HinhChinh" width="50" /></td>
                                <td>@item.Product.TenSanPham</td>
                                <td><input type="number" class="txtQuantity" data-id="@item.Product.MaSanPham" value="@item.Quantity" /></td>
                                <td>@item.Product.Gia.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@((item.Product.Gia.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                <td><a href="#" data-id="@item.Product.MaSanPham" class="btn-delete">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="section group">
                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Nguoi Nhan</label>
                        <input name="shipName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input name="mobile" class="form-control" />
                    </div>                  
                    <div class="form-group">
                        <label>Address</label>
                        <input name="address" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" class="form-control" />
                    </div>
                    <button type="submit" class="btn">Xac Nhan</button>
                }
            </div>
        </div>
    </div>
</div>

