@model IEnumerable<ShopOnlineConnection.GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/View/Shared/_MainLayout.cshtml";
}

<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="cart.html">Cart</a></li>
                </ul>
            </div>
        </div>
        @foreach (var item in Model)
        {
            //từ bên shop.details gửi mã sản phẩm , tên sản phẩm và giá sản phẩm
            //từ db lấy số lượng . soluong* gia ra tien.Sum all tien ra tong tien
            <div class="row">
                <div class="product well">
                    <div class="col-md-3">
                        <div class="image">
                            @Html.Partial("_AvartaDetails", WebApplication1.Models.BUS.ShopOnlineBUS.LoadAvartaImg(item.MaSanPham.ToString()))
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="caption">
                            @using (Html.BeginForm("CapNhat", "GioHang", FormMethod.Post))
                            {
                                @Html.Partial("_GioHang", WebApplication1.Models.BUS.ShopOnlineBUS.ChiTiet(item.MaSanPham.ToString()))
                                <label>Số lượng : </label> <input class=" form-inline quantity" min="1" max="1000" type="number" value="@item.SoLuong" name="soluong"><input type="submit" />
                                <hr />
                            }
                            <a href="@Url.Action("Xoa","GioHang",new { masanpham = item.MaSanPham})" class="btn btn-default pull-right">REMOVE</a>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }

        @*Quay ve trang san pham*@
        <div class="row">
            <div class="col-md-4 col-md-offset-8 ">
                <center><a href="@Url.Action("index","Shop")" class="btn btn-1">Continue To Shopping</a></center>
            </div>
        </div>
        @*Tinh tien*@
        <div class="row">
            <div class="pricedetails">
                <div class="col-md-4 col-md-offset-8">
                    <table>
                        <h6>Tính Tiền: </h6>
                        <tr>
                            <td>Total</td>
                            <td>@ViewBag.TongTien</td>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>-----</td>
                        </tr>
                        <tr style="border-top: 1px solid #333">
                            <td><h5>TOTAL</h5></td>
                            <td>@ViewBag.TongTien</td>
                        </tr>
                    </table>
                    <center><a href="#" class="btn btn-1">Checkout</a></center>
                </div>
            </div>
        </div>
    </div>
</div>

